<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <script>
        let a = parseInt(prompt(" nhập điểm bài kiểm tra"));
        let b = parseInt(prompt(" nhập điểm bài giữa kì"));
        let c = parseInt(prompt(" nhập điểm bài cuối kì"));
        if ( a >=8 && b >=8 && c >= 8){
            document.write(" học lực giỏi")
        } else if ( a <= 5 && b <= 5 && c <= 5) {
            document.write (" học lực yếu")
        } else {
            document.write(" HỌc lực khá")
        }
        

    </script>
</body>
</html>
