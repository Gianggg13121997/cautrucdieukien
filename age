<body>
    <h1>Check Tuổi</h1>
    <input type="text" placeholder=" Nhập số tuổi" id="age">
    <button onclick="check()"> Kiểm tra</button>
    <script>
        function check(){
            let tuoi = document.getElementById("age").value;
            if( tuoi > 18){
                alert("Đủ tuổi")
            } else{
                alert("không đủ tuổi")
            }
        }
    </script>
</body>
</html>
