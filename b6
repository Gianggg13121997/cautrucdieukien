<body>
    <h1> Kiểm tra % hoa hồng khi bán hàng :</h1>
    <input type="text" placeholder="Nhập doanh số " id="ds">
    <button onclick="check()">nhấn</button>
    <script>
        function check(){
            let a = document.getElementById("ds").value;
            if ( a >= 1000){
                alert(" hoa hồng là 15%")
            } else if(a < 1000) {
                alert (" hoa hồng không có")
            } 
            }
        
    
    </script>

